<div class="pure-g">
    <div class="pure-u-1">

<form class="pure-form pure-form-aligned" action='/signup' method='POST'>

  <div class="pure-control-group">
    <label for="name">Username</label>
    <input id="name" type="text" name="user[name]" placeholder="Username" required>
  </div>

  <div class="pure-control-group">
    <label for="password">Password</label>
    <input class="password" type="password" name="user[password]" placeholder="Password" required>
  </div>

  <div class="pure-control-group">
    <label for="password">Confirm Password</label>
    <input class="password" type="password" name="user[password_confirmation]" placeholder="Confirm Password" required>
  </div>

  <input type= 'submit' class="pure-button pure-button-primary">

  </form>
  </div>
</div>