
<div class="pure-g">
  <div class="pure-u-1 intro"><h2 id="jumbo">Create Dynamic Surveys</h2><h4 id="jumbo_comment">Fast, hassle-free survey creation in minutes</h4>
    <div class='wrapper'>
    <% if !current_user %>
    <a class="pure-button" id="intro_button" href="/signup">Sign Up</a>
    <% end %>
    </div>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1">
    <h3 id="survey-head"> Browse Surveys </h3>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1-1">
    <ul>
      <% @surveys.each do |survey| %>
        <li class="display-survey">Survey: <a href="<%= survey_url(survey) %>"><%= survey.title %></a><br>
        Created By: <a href="<%= profile_url(survey.user) %>"><%= survey.user.name %></a></li>
      <% end %>
    </ul>
  </div>
</div>

<footer>
  <div class="pure-g">
    <div class="pure-u-1 footer"><p>footer</p></div>
  </div>
</footer>
